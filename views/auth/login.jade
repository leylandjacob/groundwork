extends ../layout
block content
    .container
        form(id="login" accept-charset="UTF-8" method="POST" action="/login")
            input(type="email" name="email" class="email" placeholder="email")
            br
            input(type="password" name="password" class="password" placeholder="")
            br
            button(class="trigger-login") Login
            br
            a(href="/forgot" title="Forgot Password") Forgot Password
            br
            a(href="/signup" title="Sign Up") Sign Up