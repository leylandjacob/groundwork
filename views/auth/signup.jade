extends ../layout
block content
    .container
        form(id="signup" accept-charset="UTF-8")
            input(name="email" type="email" class="email" placeholder="email")
            br
            input(name="password" type="password" class="password" placeholder="")
            br
            button(class="trigger-signup" name="Button") Signup
            br
            a(href="/login" title="Login") Login